}
.lyrics-container h3 {
  padding: 0;
}
#lyrics {
  padding-bottom: 4rem;
}
#translation {
  padding-bottom: 1rem;
}
@media (min-width: 991px) {
  .lyrics-container {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-between;
  }
  #lyrics,
  #translation {
    padding-bottom: 0;
  }
}
#lyrics:only-child,
#translation:only-child {
  margin-left: auto;
  margin-right: auto;
}
.lyrics-container .boxed {
  border: 3px solid #f00;
}
#chorus {
  padding: 1rem 0;
}
#the-history {
  margin-bottom: 3rem;
}
.footnote {
  font-size:80%;
  line-height:1.25;
}
.caption {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 90%;
  color:#6f738f;
}


/*--------------------------------------------------------------
## Footer
--------------------------------------------------------------*/
.site-footer {
  background: #396eb0;
  color: #fff;
  padding: 20px 0;
}
.site-footer a {
  color: #fff;
}
.site-footer a:hover {
  color: #dedada;
}
.site-footer .site-info {
  font-size: 13px;
}
