/*--------------------------------------------------------------
# Typography
--------------------------------------------------------------*/
body,
button,
input,
select,
optgroup,
textarea {
  color: #373d3f;
  font-family: "Lato", sans-serif;
  font-size: 1.2rem;
  line-height: 2em;
}

h1, h2, h3, h4, h5, h6 {
  clear: both;
  font-weight: 900;
  color: #000;
  padding-top: 2rem;
  margin-bottom: 1rem;
}

p {
  margin-bottom: 1.5rem;
}

dfn, cite, em, i {
  font-style: italic;
}

blockquote {
  border-left: 4px solid #396eb0;
  padding-left: 1em;
  color: #9497b3;
}

address {
  margin: 0 0 1.5em;
}

pre {
  background: #eee;
  font-family: "Courier 10 Pitch", Courier, monospace;
  font-size: 15px;
  font-size: 0.9375rem;
  line-height: 1.6;
  margin-bottom: 1.6em;
  max-width: 100%;
  overflow: auto;
  padding: 1.6em;
}

code, kbd, tt, var {
  font-family: Monaco, Consolas, "Andale Mono", "DejaVu Sans Mono", monospace;
  font-size: 15px;
  font-size: 0.9375rem;
}

abbr, acronym {
  border-bottom: 1px dotted #666;
  cursor: help;
}

mark, ins {
  background: #fff9c0;
  text-decoration: none;
}

big {
  font-size: 125%;
}

/*--------------------------------------------------------------
# Elements
--------------------------------------------------------------*/
html {
  box-sizing: border-box;
  height: auto;
}

*,
*:before,
*:after {
  box-sizing: inherit;
}

body {
  background: #fff;
  -ms-word-wrap: break-word;
  word-wrap: break-word;
  height: 100%;
}

ul, ol {
  margin: 0 0 1.5em 0;
}

ul {
  list-style: disc;
}

ol {
  list-style: decimal;
}

li > ul,
li > ol {
  margin-bottom: 0;
  margin-left: 1.5em;
}

dt {
  font-weight: bold;
}

dd {
  margin: 0 1.5em 1.5em;
}

img {
  height: auto;
  max-width: 100%;
}

figure {
  margin: 1em 0;
}

table {
  margin: 0 0 1.5em;
  width: 100%;
  table-layout: fixed;
}

embed,
iframe,
object {
  max-width: 100%;
}

a {
	color: #396eb0;
}
a:hover, a:focus, a:active {
  text-decoration: underline;
}
a:focus {
  outline: thin dotted;
}
a:hover, a:active {
  outline: 0;
}

/*--------------------------------------------------------------
# Bootstrap column fixes
--------------------------------------------------------------*/
@media (min-width: 576px) and (max-width: 767px) {
  .offset-md-2 {
    margin-left: 15px;
  }
  .offset-md-3 {
    margin-left: 30px;
  }
}
@media (min-width: 768px) and (max-width: 991px) {
  .col-md-6 {
    width: 480px;
    max-width: 480px;
    flex: unset;
  }
  .col-md-8 {
    width: 610px;
    max-width: 610px;
    flex: unset;
  }

  .offset-md-2 {
    margin-left: 55px;
  }
  .offset-md-3 {
    margin-left: 120px;
  }
}

/*--------------------------------------------------------------
# Accessibility
--------------------------------------------------------------*/
.site-title,
.site-description {
	position: absolute;
	clip: rect(1px, 1px, 1px, 1px);
  float: left;
}

.alignleft {
  display: inline;
  float: left;
  margin-right: 1.5em;
}

.alignright {
  display: inline;
  float: right;
  margin-left: 1.5em;
}

.aligncenter {
  clear: both;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.entry-summary:before,
.entry-summary:after,
.entry-more:before,
.entry-more:after,
.site-header:before,
.site-header:after,
.site-content:before,
.site-content:after,
.site-footer:before,
.site-footer:after {
  content: "";
  display: table;
  table-layout: fixed;
}

.clear:after,
.entry-summary:after,
.entry-more:after,
.comment-content:after,
.site-header:after,
.site-content:after,
.site-footer:after {
  clear: both;
}



/*--------------------------------------------------------------
# Header
--------------------------------------------------------------*/
.header-transparent .site-header {
  background: transparent;
}
.header-transparent .site-content {
  margin-top: -90px;
}
.site-header {
  background: #0a3050;
  width: 100%;
  position: relative;
  z-index: 99;
  height: 90px;
}
.site-header .container-fluid {
  height: 100%;
}

/*--------------------------------------------------------------
## Menus
--------------------------------------------------------------*/
.main-navigation {
  display: none;
}
@media screen and (min-width: 991px) {
  .main-navigation {
    display: block;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    white-space: nowrap;
  }
  .main-navigation ul {
    list-style: none;
    margin: 0;
    padding-left: 0;
  }
  .main-navigation li {
    display: inline-block;
    position: relative;
  }
  .main-navigation a {
    color: #ffffffc4;
    font-size: 20px;
    text-transform: uppercase;
    padding: 0 10px;
    letter-spacing: 1px;
    line-height: 90px;
    display: block;
  }
  .main-navigation a:hover {
    text-decoration: none;
    color: #fff;
  }
  .menu li.current-menu-item a {
    color: #fff;
  }
}

.menu-toggle {
  position: absolute;
  right: 0;
  padding: 0 20px;
  line-height: 90px;
}
.menu-toggle a {
  font-size: 1.5em;
  color: #ffffffc4;
}
.menu-toggle a:hover {
  color: #ffffff;
}
@media (min-width: 991px) {
  .menu-toggle {
    display:none;
  }
}

.mobile-navigation {
  position: absolute;
  position: fixed;
  display: none;
  left: -200px;
  top: 0;
  height: 100%;
  overflow-x: visible;
  z-index: 999;
}
.mobile-navigation .menu-close {
  position: absolute;
  right: 0;
  top: 0;
}
.mobile-navigation ul {
  list-style: none;
  margin: 0;
  padding: 2.5em 0 0;
  /* Hide shadow w/ -8px while 'closed' */
  -webkit-box-shadow: -8px 0 8px rgba(0,0,0,.5);
     -moz-box-shadow: -8px 0 8px rgba(0,0,0,.5);
          box-shadow: -8px 0 8px rgba(0,0,0,.5);
  min-height: 100%;
  width: 200px;
  background: #0a3050;
}
.mobile-navigation li:first-child a {
  border-top: 1px solid #6f738f;
}
.mobile-navigation a {
  display: block;
  text-transform: uppercase;
  padding: .75em 15px;
  line-height: 1em;
  font-size: 1em;
  color: #ffffffc4;
  text-decoration: none;
  border-bottom: 1px solid #6f738f;
}
.mobile-navigation a:hover,
.mobile-navigation a:focus {
  color: #fff;
  text-decoration: none;
}
.mobile-navigation .primary-menu a:hover,
.mobile-navigation .primary-menu a:focus {
  background: #333;
}
.mobile-navigation .menu-close {
  position: absolute;
  right: 0;
  top: 0;
  border: none;
}
.backdrop {
  display: none;
}

.mobile-navigation.open {
  display: block;
  left: 0;
  outline: none;
  -moz-box-shadow: 3px 0 12px rgba(0,0,0,.25);
  -webkit-box-shadow: 3px 0 12px rgba(0,0,0,.25);
  box-shadow: 3px 0 12px rgba(0,0,0,.25);
}
.mobile-navigation.open .menu-close {
  z-index: 1001;
}
.mobile-navigation.open ul {
  position: relative;
  z-index: 1000;
}
.mobile-navigation.open + .backdrop {
  position: absolute;
  position: fixed;
  display: block;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 998;
  background: #000;
  background: rgba(0,0,0,.85);
  cursor: default;
}


.social-links ul {
  list-style: none;
  margin: 0;
  padding: 0;
}
.social-links li {
  display: inline-block;
  margin: 0 0.5rem;
}
.social-links a {
  color: #ffffffc4;
  font-size: 24px;
  line-height: 90px;
}
.social-links a:hover {
  text-decoration: none;
  color: #fff;
}
.social-links {
  position: absolute;
  right: 0;
  margin-right: 1.5rem;
  white-space: nowrap;
}
@media screen and (max-width: 990px) {
  .social-links {
    left: 0;
    right: unset;
    margin: 0;
    margin-left: 1rem;
  }
  .social-links a {
    font-size: 24px;
  }
  .social-links li {
    margin: 0 0.25rem;
  }
}


/*--------------------------------------------------------------
## Hero
--------------------------------------------------------------*/
.section-hero {
  min-height: 300px;
  max-height: 750px;
  height: 75vh;
  background-position: center top;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
}
.section-hero:after {
  position: absolute;
  width: 100%;
  height: 100%;
  content: '';
  background: #00000060;
}
.hero-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  display: table;
}
a.hero-button {
  background-color: #1db954;
  color: #fff;
  font-size: 20px;
  letter-spacing: 1.1px;
  border-radius: 50px 50px 50px 50px;
  padding: 15px 40px 15px 40px;
  border: 3px solid #1db954;
  text-decoration: none;
}
a.hero-button:hover {
  background-color: #158a3e;
  border-color: #158a3e;
}
.hero-wrapper .content-center {
  display: table-cell;
  vertical-align: middle;
  text-align: center;
  padding-bottom: 7%;
}

.lfoc {
  position: absolute;
  bottom: 2.5%;
  left: 50%;
  margin: 0;
  padding: 0;
  display: flex;
  transform: translateX(-50%);
}
.lfoc .usic a {
  font-size:80%;
  position:absolute;
  top:5%;
  color:#83baff;
}
.lfoc .usic a:hover {
  color:#0056b3;
  text-decoration:none;
}
.lfoc .luiz,
.lfoc .chamon,
.lfoc .luiz-chamon {
  font-family: "Playfair display";
  color: #eee;
  line-height: 1;
  font-weight: normal;
}
.lfoc .luiz-chamon {
  font-size: 16vw;
}
.lfoc .luiz,
.lfoc .chamon {
	display: none;
}

@media screen and (min-width: 767px) {
  .lfoc .luiz,
  .lfoc .chamon {
    font-size: 15vw;
  	display: flex;
    position: relative;
  }
  .lfoc .luiz-chamon {
    display: none;
  }
  .lfoc .iving,
  .lfoc .usic {
    font-size: 4vw;
    position: absolute;
    left: 5%;
    bottom: 0;
  }
  .lfoc .uiz,
  .lfoc .on {
    font-size: 12vw;
    position: relative;
  }
  .lfoc .uiz {
    margin-right: 2vw;
    margin-left: -2%;
  }
  .lfoc .on {
    margin-left: -1%;
  }
}

@media screen and (min-width: 991px) {
  .lfoc .uiz {
    margin-right: 1.5vw;
  }
}


/*--------------------------------------------------------------
# Content
--------------------------------------------------------------*/
/*--------------------------------------------------------------
## Site Content
--------------------------------------------------------------*/
@media (min-width: 992px) {
  .container {
    max-width: 960px;
  }
}

.site-content main {
  padding-top: 60px;
  padding-bottom: 60px;
}

main.site-release {
  padding: 24px;
  padding-bottom: 0;
}


/*--------------------------------------------------------------
## Posts and pages
--------------------------------------------------------------*/
.site-main {
  font-size: 1.25rem;
  color: #6f738f;
}
.site-main h1 {
  text-align: center;
  color: #6f738f;
  font-size: 2em;
  font-variant: small-caps;
  margin-bottom: 5rem;
  margin-top: 0;
}
@media (min-width: 768px) {
  .site-main h1 {
    font-size: 3em;
  }
}
.site-main h2 {
  text-align: center;
  font-size: 2em;
  padding: 0;
}
.site-main h3 {
  margin-top: 5rem;
  margin-bottom: 1rem;
}

.article {
  padding: 20px;
  max-width: 100%;
}
.article h1 {
  text-align: center;
  margin-top: 0;
  padding-top: 0;
  margin-bottom: 2em;
}
.article-meta {
  padding-bottom: 0.25em;
  margin-bottom: 0;
  margin-top: 0;
  color: #abb4b9;
  text-align: center;
}


.entry,
.entry-music {
  padding: 48px 0;
  max-width: 100%;
}
@media (min-width: 768px) {
  .entry,
  .entry-music {
    display: grid;
    grid-template-rows: auto auto 1fr;
    column-gap: 20px;
  }
  article.entry:nth-of-type(odd),
  article.entry-music {
    grid-template-columns: 200px 1fr;
  }
  article.entry:nth-of-type(even) {
    grid-template-columns: 1fr 200px;
  }
}

.entry-thumbnail {
  width: 200px;
  margin-bottom: 2rem;
  clear: both;
  display: block;
  margin-left: auto;
  margin-right: auto;
}
.entry-thumbnail img {
  width: 100%;
}
@media (min-width: 768px) {
  article.entry:nth-of-type(odd) .entry-thumbnail,
  article.entry-music .entry-thumbnail {
    grid-column:1;
    grid-row:1;
  }
  article.entry:nth-of-type(even) .entry-thumbnail {
    grid-column:2;
    grid-row:1;
  }
  .entry-thumbnail {
    margin: 0;
  }
  .entry-music .entry-thumbnail {
    width: 100%;
  }
}

.entry-content {
  grid-column: 1;
  grid-row: 2;
  position: relative;
}
.entry-more a {
  color: #39739d;
  float: right;
}
.entry-more {
  margin: 0;
  line-height: 1;
}
@media (min-width: 768px) {
  article.entry:nth-of-type(odd) .entry-content,
  article.entry-music .entry-content {
    grid-column: 2;
    grid-row: 1;
  }
  article.entry:nth-of-type(even) .entry-content {
    grid-column: 1;
    grid-row: 1;
  }
}

.entry-header {
  padding: 0;
  margin: 0;
  line-height: 1;
}
@media (max-width: 767px) {
  .entry-header {
    clear: both;
    display: block;
    margin-left: auto;
    margin-right: auto;
  }
}
.entry-header a {
  color: #000;
  text-decoration: none;
}
.entry-header a:hover {
  color: #396eb0;
  text-decoration: none;
}

.entry-meta {
  padding-bottom: 0.5em;
  margin-bottom: 0;
  margin-top: 0;
  color: #abb4b9;
  font-size: 1rem;
  line-height: 1;
}
.entry-summary {
  margin: 0;
  padding-top: 0.5em;
  color: #6f738f;
  margin-bottom: 1em;
}
@media (max-width: 767px) {
  .entry-music .entry-summary {
    text-align: center;
    margin-bottom: 1rem;
  }
}
.entry-summary p {
  line-height: 1.5;
  margin: 0;
}


.entry-hr {
  margin-bottom: 2em;
  display: normal;
}
.entry-hr:last-of-type {
  display: none;
}
@media (min-width: 768px) {
  .entry-hr {
    display: none;
  }
}


.music-buttons,
.release-buttons {
  display: block;
  width: 190px;
  margin-top: 4rem;
  margin-bottom: 4rem;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
}
.music-buttons a,
.release-buttons a {
  display: block;
  background-color: #396eb0;
  color: #fff;
  font-size: 20px;
  letter-spacing: 1.1px;
  border-radius: 30px;
  padding: 8px 30px;
  border: 3px solid #396eb0;
  text-decoration: none;
  margin-top: 1rem;
}
.music-buttons a:hover {
  background-color: #0a3050;
  border-color: #0a3050;
  text-decoration: none;
  color: #fff;
}
@media (min-width: 768px) {
  .music-buttons,
  .release-buttons {
    display: flex;
    justify-content: space-between;
    padding: 10px 0;
    width: 100%;
  }
  .music-buttons a,
  .release-buttons a {
    display: inline-block;
    margin: 0;
  }
}


.pagination {
  display: block;
}
.pagination-item {
  display: block;
  padding: 1rem;
  border: 1px solid #eee;
  text-align: center;
  color: #9a9a9a;
}
.pagination-item:first-child {
  margin-bottom: -1px;
}
@media (min-width: 468px) {
  .pagination {
    display: flex;
  }
  .pagination-item {
    float: left;
    width: 50%;
  }
  .pagination-item:first-child {
    margin-bottom: 0;
    border-top-left-radius:    7px;
    border-bottom-left-radius: 7px;
  }
  .pagination-item:last-child {
    margin-left: -1px;
    border-top-right-radius:    7px;
    border-bottom-right-radius: 7px;
  }
}


.about-title {
  text-align: center;
  margin: 0;
  padding: 0;
}
.about-title:after {
  display: block;
  content: '';
  background-color: #000;
  height: 4px;
  width: 74px;
  margin-top: 1rem;
  margin-bottom: 2rem;
  margin-right: auto;
  margin-left: auto;
}

